{{! views/partials/signup-modal.hbs }}

<div
  class='modal fade'
  id='signupModal'
  tabindex='-1'
  aria-labelledby='signupModalLabel'
  aria-hidden='true'
  data-bs-theme='dark'
>
  <div class='modal-dialog modal-dialog-centered'>
    {{! modal-dialog-centered centers the modal vertically }}
    <div class='modal-content text-white bg-dark border-secondary rounded-4'>
      {{! Rounded corners, dark background, light text }}

      <div class='modal-header border-0 pb-0'>
        {{! No border at the top, padding adjustments }}
        <button
          type='button'
          class='btn-close btn-close-white'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
        {{! White close button for dark theme }}
        <div class='flex-grow-1 text-center'>
          {{! For centering the X logo }}
          {{! Placeholder for the X logo }}
          {{! You might have an SVG or an image here }}
          <svg
            width='24'
            height='24'
            viewBox='0 0 24 24'
            fill='currentColor'
            aria-hidden='true'
            class='r-yyyyoo r-1nao33f r-4qtqp9 r-yyyyoo r-16y2uox r-8kz0gk r-dnmrzs r-bnwqim r-1plcruer r-lkmh6g r-1hdv0qi'
          ><g><path
                d='M18.244 2.25h3.308l-7.227 8.26 8.714 11.24H12.809L8.714 10.3ZM10.59 11.405 1.154 2.25H8.08L16.095 11.405 22.846 21.75H15.914ZM1.802 22.766l.006.009v-.009Zm.402-.019v.009Z'
              ></path></g></svg>
        </div>
      </div>

      <div class='modal-body px-5 pt-0'>
        {{! Padding on sides, no top padding to align with header close button }}
        <h2 class='modal-title fs-3 fw-bold mb-4' id='signupModalLabel'>Create
          your account</h2>

        <form>
          {{! Name Field }}
          <div class='form-floating mb-3'>
            <input
              type='text'
              class='form-control bg-dark text-white border-secondary'
              id='signupName'
              placeholder='Name'
              required
            />
            <label for='signupName' class='text-secondary'>Name</label>
          </div>

          {{! Email Field }}
          <div class='form-floating mb-4'>
            <input
              type='email'
              class='form-control bg-dark text-white border-secondary'
              id='signupEmail'
              placeholder='Email'
              required
            />
            <label for='signupEmail' class='text-secondary'>Email</label>
          </div>

          <h5 class='fw-bold mb-2'>Date of birth</h5>
          <p class='text-secondary mb-3 small'>This will not be shown publicly.
            Confirm your own age, even if this account is for a business, a pet,
            or something else.</p>

          {{! Date of Birth Dropdowns (Month, Day, Year) }}
          <div class='row g-2 mb-5'>
            {{! g-2 for gutter spacing between columns }}
            <div class='col'>
              <select
                class='form-select bg-dark text-white border-secondary'
                id='dobMonth'
                required
              >
                <option value='' disabled selected>Month</option>
                {{! Populate months dynamically or hardcode }}
                <option value='1'>January</option>
                <option value='2'>February</option>
                <option value='3'>March</option>
                <option value='4'>April</option>
                <option value='5'>May</option>
                <option value='6'>June</option>
                <option value='7'>July</option>
                <option value='8'>August</option>
                <option value='9'>September</option>
                <option value='10'>October</option>
                <option value='11'>November</option>
                <option value='12'>December</option>
              </select>
            </div>
            <div class='col'>
              <select
                class='form-select bg-dark text-white border-secondary'
                id='dobDay'
                required
              >
                <option value='' disabled selected>Day</option>
                {{! Populate days dynamically or hardcode }}
                {{#each (new Array 31)}}
                  <option value='{{@index}}'>{{add @index 1}}</option>
                {{/each}}
              </select>
            </div>
            <div class='col'>
              <select
                class='form-select bg-dark text-white border-secondary'
                id='dobYear'
                required
              >
                <option value='' disabled selected>Year</option>
                {{! Populate years dynamically or hardcode (e.g., last 100 years) }}
                {{#each (new Array 100)}}
                  <option
                    value='{{subtract (getCurrentYear) @index}}'
                  >{{subtract (getCurrentYear) @index}}</option>
                {{/each}}
              </select>
            </div>
          </div>

          {{! Next Button }}
          <div class='d-grid'>
            {{! Makes the button span the full width }}
            <button
              type='submit'
              class='btn btn-light btn-lg rounded-pill fw-bold py-2'
            >Next</button>
          </div>
        </form>
      </div>
      {{! No modal-footer in the original design }}
    </div>
  </div>
</div>

{{!
  Optional Handlebars helpers for dynamic year/day population.
  You'd need to register these in your Express app.js if you use them.

  Example:
  app.engine('hbs', hbs.engine({
    extname: '.hbs',
    defaultLayout: 'layout',
    helpers: {
      getCurrentYear: () => new Date().getFullYear(),
      add: (a, b) => a + b,
      subtract: (a, b) => a - b
    }
  }));
}}